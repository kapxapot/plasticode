{% extends 'admin/layout.twig' %}

{% import 'admin/macros.twig' as m %}

{% set can_create = can(alias, 'create') %}
{% set can_edit = can(alias, 'edit_own') %}
{% set can_delete = can(alias, 'delete_own') %}

{% set actions = can_edit or can_delete %}

