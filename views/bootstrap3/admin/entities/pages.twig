{% extends 'admin/entity.twig' %}

{% block modal_shown %}
    if ($scope.itemId == 0) {
        init();
    }
    else {
        $scope.loading = true;

        $http.get('{{ api }}pages/' + $scope.itemId).then(function(response) {
            const data = response.data;

            $scope.item.text = data['text'];
            $scope.loading = false;

            init();
        });
    }
{% endblock %}
